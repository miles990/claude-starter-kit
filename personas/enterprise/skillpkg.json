{
  "$schema": "https://github.com/miles990/skillpkg/schemas/skillpkg.json",
  "name": "enterprise",
  "version": "1.0.0",
  "description": "Enterprise-grade development - stable, secure, auditable",

  "skills": {
    "self-evolving-agent": {
      "source": "github:miles990/self-evolving-agent",
      "version": "^3.7.0",
      "required": true
    },
    "frontend": {
      "source": "github:miles990/claude-software-skills#skills/frontend",
      "version": "latest"
    },
    "backend": {
      "source": "github:miles990/claude-software-skills#skills/backend",
      "version": "latest"
    },
    "database": {
      "source": "github:miles990/claude-software-skills#skills/database",
      "version": "latest"
    },
    "testing-strategies": {
      "source": "github:miles990/claude-software-skills#skills/testing-strategies",
      "version": "latest",
      "required": true
    },
    "security": {
      "source": "github:miles990/claude-software-skills#skills/security",
      "version": "latest",
      "required": true
    },
    "documentation": {
      "source": "github:miles990/claude-software-skills#skills/documentation",
      "version": "latest"
    },
    "devops-ci-cd": {
      "source": "github:miles990/claude-software-skills#skills/devops-ci-cd",
      "version": "latest"
    },
    "git-workflows": {
      "source": "github:miles990/claude-software-skills#skills/git-workflows",
      "version": "latest"
    }
  },

  "sync": {
    "targets": ["claude-code"],
    "autoSync": true
  },

  "settings": {
    "scope": "local"
  },

  "persona": {
    "name": "enterprise",
    "philosophy": "Stability and security first",
    "priorities": [
      "Security over convenience",
      "Tested code over fast code",
      "Documentation for maintenance",
      "Audit trail for compliance"
    ],
    "rules_override": {
      "testing": "required",
      "documentation": "comprehensive",
      "code_review": "mandatory",
      "security_scan": "required"
    }
  }
}
